<%= link_to 'Program List', programs_path %>
<%= link_to 'Edit', edit_program_path(@program) %>

<p>
  <strong>Program name:</strong>
  <%= @program.program_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @program.description %>
</p>

<p>
  <strong>Exercises:</strong>
  <% if @program.exercises.any? %>

    <% @program.exercises.each do |exercise| %>
      <%= exercise.exercise_name %>
      <%= "The number of sets for this exercise is #{show_sets(exercise, @program)}" %>
      <%= "The number of reps for this exercise is #{show_reps(exercise, @program)}" %>
    <% end %>
  <% else %>
    <%= "No Exercises Selected for this Program" %>
  <% end %>
</p>

<p>
  <strong>Days of the Week:</strong>
  <% if @program.day_of_week.any? %>
    <% @program.day_of_week.each do |dow| %>
      <%= dow %>
    <% end %>
  <% else %>
    <%= "No Days Selected for this Program" %>
  <% end %>
</p>

